#----------------------------------------------------------------------------
#	Target to make
#	--------------

TARGET :=				jpg

USE_PSPSDK_LIBC :=		1

#----------------------------------------------------------------------------
#	Project folders
#	---------------

FA_SOURCE_DIR :=		../../../
FA_INCLUDE_DIR :=		../../../

#----------------------------------------------------------------------------
#	Source to make
#	--------------

OBJS :=					Main.o

FA_OBJS :=				

#----------------------------------------------------------------------------
#	All objects to make
#	-------------------

OBJS :=					$(OBJS) $(FA_OBJS)

#----------------------------------------------------------------------------
#	Additional includes
#	-------------------

INCDIR   :=				$(INCDIR) $(INCLUDE_DIR) $(FA_INCLUDE_DIR)

#----------------------------------------------------------------------------
#	Addditional libraries
#	---------------------

LIBS :=					-ljpeg -lc

#----------------------------------------------------------------------------
#	Compiler settings
#	-----------------

CFLAGS :=				-O2 -G0 -Wall
CXXFLAGS :=				$(CFLAGS) -fno-exceptions -fno-rtti
ASFLAGS :=				$(CFLAGS)

LIBDIR :=				

#----------------------------------------------------------------------------
#	PRX build settings
#	------------------

PSPSDK :=				$(shell psp-config --pspsdk-path)

include					$(PSPSDK)/lib/build_prx.mak
