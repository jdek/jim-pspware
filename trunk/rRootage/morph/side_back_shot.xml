<bulletml type="vertical"
          xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

<action label="top">
	<wait>20+$rank*20</wait>
	<fire>
		<direction type="relative">-135</direction>
		<speed type="relative">0</speed>
		<bullet/>
	</fire>
	<fire>
		<direction type="relative">135</direction>
		<speed type="relative">0</speed>
		<bullet/>
	</fire>
</action>

</bulletml>
