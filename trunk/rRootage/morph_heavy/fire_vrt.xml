<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "http://www.asahi-net.or.jp/~cs8k-cyu/bulletml/bulletml.dtd">

<bulletml type="vertical"
          xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

<action label="top">
	<repeat><times>8</times>
	<action>
		<fire>
			<direction type="absolute">180</direction>
			<bulletRef label="acc"/>
		</fire>
		<wait>30-$rank*15</wait>
	</action>	
	</repeat>
</action>

<bullet label="acc">
	<speed>0.1</speed>
	<action>
		<changeSpeed>
			<speed>0.9</speed>
			<term>40</term>
		</changeSpeed>
	</action>
</bullet>

</bulletml>
